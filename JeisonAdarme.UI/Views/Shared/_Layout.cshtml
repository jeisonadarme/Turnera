<body id="page-top" class="index">
    <div class="modal fade" id="mapsgoogle" tabindex="-1" role="application" aria-hidden="true">

        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                    <h4 class="modal-title">Selecciona la ubicación en el mapa.</h4>

                </div>
                <div class="modal-body">
                    <div class="container">
                        <div class="row">
                            <div id="map" style="width:550px; height:500px"></div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                    <button type="button" class="btn btn-primary">Guardar</button>
                </div>
            </div>
        </div>

        <script type="text/javascript">
            var map;
            function initMap() {

                $('#mapsgoogle').modal('show');
                showLoading();
               // console.log('sdfasdf');
                setTimeout(
                function () {
                    map = new google.maps.Map(document.getElementById('map'), {
                        center: { lat: 4.67224236512012, lng: -74.06570434570312 }, //Lat=4.67224236512012; Lng=-74.06570434570312
                        zoom: 5
                    });
                    google.maps.event.addListener(map, "rightclick", function (event) {
                        var lat = event.latLng.lat();
                        var lng = event.latLng.lng();
                        // populate yor box/field with lat, lng
                       console.log("Lat=" + lat + "; Lng=" + lng);
                        var myLatLng = { lat: lat, lng: lng };

                        var marker = new google.maps.Marker({
                            position: myLatLng,
                            map: map,
                            title: 'Hello World!'
                        });

                    });

                    hideLoading();  
                }, 1000);
            }
            //map.event.addListener(marker, "click", function (event) { var latitude = event.latLng.lat(); var longitude = event.latLng.lng(); console.log(latitude + ', ' + longitude); });
        </script>
        <script async defer
                src="https://maps.googleapis.com/maps/api/js?key=AIzaSyD3yKiLV-JGin5w0VohdndfovtaUJSi9NY">
        </script>
    </div>


    @{
        Html.RenderPartial("_NavBarPartial");
        Html.RenderPartial("_HeaderPartial");

        @RenderBody()

        Html.RenderPartial("_AboutSectionPartial");
        Html.RenderPartial("_ContactSectionPartial");
        Html.RenderPartial("_FooterSection");
    }

    <!-- Scroll to Top Button (Only visible on small and extra-small screen sizes) -->
    <div class="scroll-top page-scroll visible-xs visible-sm">
        <a class="btn btn-primary" href="#page-top">
            <i class="fa fa-chevron-up"></i>
        </a>
    </div>

  
    <script src="http://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.3/jquery.easing.min.js"></script>



    @RenderSection("scripts", required: false)


    @Scripts.Render("~/bundles/free")

    <script>
        function showLoading() {
            jQuery('#page-top').showLoading();
        }

        function hideLoading() {
            jQuery('#page-top').hideLoading();
        }

        function hideLoadingError() {
            jQuery('#page-top').hideLoading();
            alert('Lo sentimos no se pudo procesar la petición, intenta de nuevo.');
        }

